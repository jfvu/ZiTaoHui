<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f8f8f8">
    <TextView
        android:id="@+id/tv_index"
        android:layout_width="match_parent"
        android:layout_height="50px"
        android:text="A"
        android:textColor="#FF5F3104"
        android:textSize="18px"
        android:layout_gravity="center_vertical"
        android:gravity="left|center_vertical"
        android:layout_marginLeft="12px"
        android:background="#f8f8f8"/>

    <RelativeLayout
        android:id="@+id/rel_recycleview"
        android:layout_width="match_parent"
        android:layout_height="56px"
        android:background="#ffffff">
        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="42px"
            android:layout_height="42px"
            android:layout_marginLeft="11px"
            android:layout_centerVertical="true"
            android:src="@drawable/attention_head"
            android:contentDescription="avatar"/>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_centerVertical="true"
    android:layout_marginLeft="58px">
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="粉丝"
        android:textColor="#E6121212"
        android:textSize="14px"/>
    <TextView
        android:id="@+id/tv_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="粉丝个人简介"
        android:textColor="#40323232"
        android:textSize="10px"
        android:layout_marginTop="6px"
        />
</LinearLayout>



    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        />
</LinearLayout>