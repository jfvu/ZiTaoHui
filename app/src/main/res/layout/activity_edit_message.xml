<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jiaofeng.zitaohui.ui.activity.EditMessageActivity"
    android:background="#f8f8f8">
<LinearLayout
    android:id="@+id/ll_status_activity_editmessage"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"></LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44px"
        android:background="#242424">
        <ImageView
            android:id="@+id/img_return_activity_editmessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/all_return"
            android:padding="12px"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="填写内容"
            android:textColor="#FFFFFFFF"
            android:textSize="17px"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="36px"
        android:background="@null"
        android:layout_marginTop="8px"
        android:hint="填写内容"
        android:textColorHint="#FF121212"
        android:textSize="14px"
        android:layout_marginLeft="12px"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="89px"
        android:background="@null"
        android:layout_marginLeft="12px"
        android:layout_marginTop="8px"
        android:hint="内容内容内容内容"
        android:textColorHint="#ff121212"
        android:textSize="12px"
        android:gravity="start"/>
    <RelativeLayout
        android:id="@+id/rl_finsh"
        android:layout_width="match_parent"
        android:layout_height="36px"
        android:background="@drawable/shape_btnbg"
        android:layout_marginTop="24px"
        android:layout_marginLeft="12px"
        android:layout_marginRight="12px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提交并发送"
            android:textColor="#FFFFFFFF"
            android:textSize="14px"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
</LinearLayout>
