<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jiaofeng.zitaohui.ui.activity.RechargeActivity"
    android:background="#FFF8F8F8">
<LinearLayout
    android:id="@+id/ll_status_activity_recharge"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"></LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44px"
        android:background="#FF242424">
        <RelativeLayout
            android:id="@+id/rl_return_activity_recharge"
            android:layout_width="35px"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="9px"
                android:layout_height="16px"
                android:src="@drawable/all_return"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="充值"
            android:textColor="#FFFFFFFF"
            android:textSize="17px"
            android:layout_centerInParent="true"/>
        <TextView
            android:id="@+id/tv_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="明细"
            android:textColor="#FFFFFFFF"
            android:textSize="12px"
            android:padding="12px"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="161px"
        android:layout_marginTop="8px"
        android:layout_marginRight="12px"
        android:layout_marginLeft="12px"
        android:background="@drawable/item_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12.30"
            android:textColor="#FFE73B3B"
            android:textSize="36px"
            android:layout_marginTop="24px"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="冻结款项:12.00"
            android:textColor="#FF4990E2"
            android:textSize="14px"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#14121212"
            android:layout_marginTop="16px"
            android:layout_marginLeft="8px"
            android:layout_marginRight="8px"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <LinearLayout
                android:id="@+id/ll_freeze"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="冻结款"
                    android:textColor="#E6121212"
                    android:textSize="14px"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1234"
                    android:textColor="#E6FF0000"
                    android:textSize="14px"/>
            </LinearLayout>
            <ImageView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_marginTop="8px"
                android:layout_marginBottom="8px"
                android:background="#14121212"/>
            <LinearLayout
                android:id="@+id/ll_unpaid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="待付款"
                    android:textColor="#E6121212"
                    android:textSize="14px"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1234"
                    android:textColor="#E6FF0000"
                    android:textSize="14px"/>
            </LinearLayout>
            <ImageView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_marginTop="8px"
                android:layout_marginBottom="8px"
                android:background="#14121212"/>
            <LinearLayout
                android:id="@+id/ll_nosend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="待发货"
                    android:textColor="#E6121212"
                    android:textSize="14px"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1234"
                    android:textColor="#E6FF0000"
                    android:textSize="14px"/>
            </LinearLayout>
            <ImageView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_marginTop="8px"
                android:layout_marginBottom="8px"
                android:background="#14121212"/>
            <LinearLayout
                android:id="@+id/ll_notake"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="待收货"
                    android:textColor="#E6121212"
                    android:textSize="14px"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1234"
                    android:textColor="#E6FF0000"
                    android:textSize="14px"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24px"
        android:layout_marginBottom="24px">
        <Button
            android:id="@+id/btn_recharge"
            android:layout_width="140px"
            android:layout_height="36px"
            android:background="@drawable/shape_btn1_recharge"
            android:text="充值"
            android:textColor="#FFFFFFFF"
            android:textSize="14px"/>
        <Button
            android:id="@+id/btn_withdraw"
            android:layout_width="140px"
            android:layout_height="36px"
            android:background="@drawable/shape_btn2_recharge"
            android:layout_marginLeft="23px"
            android:text="提现"
            android:textColor="#FFFFFFFF"
            android:textSize="14px"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_safety"
        android:layout_width="match_parent"
        android:layout_height="48px"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付安全"
            android:textColor="#FF121212"
            android:textSize="16px"
            android:layout_marginLeft="12px"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="9px"
            android:layout_height="16px"
            android:src="@drawable/find_next"
            android:layout_marginRight="12px"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_favorable"
        android:layout_width="match_parent"
        android:layout_height="48px"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="1px"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="优惠券"
            android:textColor="#FF121212"
            android:textSize="16px"
            android:layout_marginLeft="12px"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="9px"
            android:layout_height="16px"
            android:src="@drawable/find_next"
            android:layout_marginRight="12px"/>
    </LinearLayout>
</LinearLayout>
