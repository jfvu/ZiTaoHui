<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jiaofeng.zitaohui.ui.activity.LoginActivity"
    android:background="#f8f8f8">
<LinearLayout
    android:id="@+id/ll_status_activity_login"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"></LinearLayout>
    <TextView
        android:layout_width="96px"
        android:layout_height="96px"
        android:background="@drawable/shape_logobg"
        android:layout_centerHorizontal="true"
        android:text="logo"
        android:textSize="36px"
        android:textColor="#ffffff"
        android:gravity="center"
        android:layout_marginTop="76px"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40px"
        android:layout_marginRight="68px"
        android:layout_marginLeft="68px"
        android:background="@drawable/shape_inputbg"
        android:layout_marginTop="222px"
        android:focusableInTouchMode="true"
        android:focusable="true">
        <ImageView
            android:layout_width="18px"
            android:layout_height="18px"
            android:src="@drawable/zhanghu"
            android:layout_marginLeft="12px"
            android:layout_centerVertical="true"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:layout_marginLeft="35px"
            android:hint="请输入手机号码"
            android:textColorHint="#666B6B6B"
            android:textSize="14px"
            android:gravity="center_vertical"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40px"
        android:layout_marginRight="68px"
        android:layout_marginLeft="68px"
        android:background="@drawable/shape_inputbg"
        android:layout_marginTop="274px"
        android:focusableInTouchMode="true"
        android:focusable="true">
        <ImageView
            android:layout_width="18px"
            android:layout_height="18px"
            android:src="@drawable/mima"
            android:layout_marginLeft="12px"
            android:layout_centerVertical="true"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:layout_marginLeft="35px"
            android:hint="请输入密码"
            android:textColorHint="#666B6B6B"
            android:textSize="14px"
            android:gravity="center_vertical"/>
    </RelativeLayout>
    <Button
        android:id="@+id/btn_login_activity_login"
        android:layout_width="match_parent"
        android:layout_height="40px"
        android:layout_marginLeft="68px"
        android:layout_marginRight="68px"
        android:background="@drawable/shape_btnbg"
        android:layout_marginTop="350px"
        android:text="登录"
        android:textColor="#FFFFFFFF"
        android:textSize="16px"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="426px">
        <TextView
            android:id="@+id/tv_register_activity_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册账户"
            android:textColor="#FF242424"
            android:textSize="16px"
            android:layout_marginLeft="24px"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_sms_activity_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="短信快捷登录"
            android:textColor="#FF242424"
            android:textSize="16px"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_marginRight="24px"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16px">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/mian_weiixn"/>
        <TextView
            android:id="@+id/tv_weixin_activity_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微信登录"
            android:textColor="#FF323232"
            android:textSize="12px"
            android:layout_marginLeft="3px"/>
        <ImageView
            android:layout_width="1px"
            android:layout_height="17px"
            android:background="#323232"
            android:layout_marginLeft="5px"/>
        <TextView
            android:id="@+id/tv_forget_activity_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码？"
            android:textColor="#FF323232"
            android:textSize="12px"
            android:layout_marginLeft="5px"/>
    </LinearLayout>
</RelativeLayout>
