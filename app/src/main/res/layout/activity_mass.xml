<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8"
    tools:context="com.example.jiaofeng.zitaohui.ui.activity.MassActivity">
<LinearLayout
    android:id="@+id/ll_status_activity_mass"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"></LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44px"
        android:background="#242424">
        <ImageView
            android:id="@+id/img_return_activity_mass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/all_return"
            android:padding="12px"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="群发消息"
            android:textColor="#FFFFFFFF"
            android:textSize="17px"
            android:layout_centerInParent="true"/>
        <TextView
            android:id="@+id/tv_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="群发"
            android:textColor="#FFFFFFFF"
            android:textSize="12px"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:padding="12px"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12px"
        android:layout_marginLeft="12px"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="今日剩余群发消息："
            android:textColor="#E6000000"
            android:textSize="14px"/>
        <TextView
            android:id="@+id/tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textColor="#FF0000"
            android:textSize="14px"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5px"
        android:layout_marginLeft="12px"
        android:text="注：多品消息一次只能发7个拍品（消息样式：单品/多品）"
        android:textColor="#40121212"
        android:textSize="10px"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_activity_mass"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="12px"></android.support.v7.widget.RecyclerView>
</LinearLayout>
