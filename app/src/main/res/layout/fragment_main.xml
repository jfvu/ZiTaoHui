<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<RelativeLayout
    android:id="@+id/rl_title_fragment_main"
    android:layout_width="match_parent"
    android:layout_height="44px"
    android:background="#242424">
    <ImageView
        android:id="@+id/img_seach_fragemnt_main"
        android:layout_width="16px"
        android:layout_height="16px"
        android:src="@drawable/seach"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12px"/>
    <TextView
        android:id="@+id/tv_title_fragment_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="紫陶汇"
        android:textColor="#e6ffffff"
        android:textSize="17px"
        android:layout_centerInParent="true"/>
</RelativeLayout>
    <android.support.design.widget.TabLayout
        android:id="@+id/tl_fragment_main"
        android:layout_width="match_parent"
        android:layout_height="40px"
        app:tabIndicatorHeight="2px"
        app:tabSelectedTextColor="#242424"
        app:tabTextColor="#121212"
        android:layout_below="@id/rl_title_fragment_main"
        android:background="#ffffff"
        app:tabIndicatorColor="#242424"></android.support.design.widget.TabLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_fragment_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tl_fragment_main"></android.support.v4.view.ViewPager>
</RelativeLayout>