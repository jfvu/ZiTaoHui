<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="89px"
    android:background="#ffffff"
    android:layout_marginTop="1px"
    android:gravity="center_vertical"
              xmlns:app="http://schemas.android.com/apk/res-auto">
<ImageView
    android:layout_width="73px"
    android:layout_height="73px"
    android:background="@drawable/item_img"
    android:layout_marginLeft="12px"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="5px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="内容内容内容内容内容内容"
            android:textColor="#E6121212"
            android:textSize="14px"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥4000起"
            android:textColor="#FFFF0000"
            android:textSize="14px"
            android:layout_marginTop="3px"/>
        <LinearLayout
            android:id="@+id/ll_soon_item_rv_crowdfunding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="13px"
            android:visibility="gone">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16小时"
                android:textColor="#FFFF0000"
                android:textSize="12px"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="后开始"
                android:textColor="#FFFF0000"
                android:textSize="12px"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_normal_item_rv_crowdfunding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
                    android:id="@+id/pb_crowdfunding"
                    android:layout_width="180px"
                    android:layout_height="3px"
                    app:rcProgress="76"
                    app:rcMax="100"
                    app:rcRadius="100px"
                    app:rcBackgroundPadding="0px"
                    app:rcReverse="false"
                    app:rcProgressColor="#FF0000"
                    app:rcBackgroundColor="#D8D8D8"></com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="76%"
                    android:textColor="#FFFF0000"
                    android:textSize="9px"
                    android:layout_marginLeft="12px"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5px">
<ImageView
    android:layout_width="10px"
    android:layout_height="10px"
    android:src="@drawable/crowdfunding_time"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1544人"
                    android:textColor="#40121212"
                    android:textSize="10px"
                    android:layout_marginLeft="3px"/>
                <ImageView
                    android:layout_width="10px"
                    android:layout_height="10px"
                    android:src="@drawable/crowdfunding_time"
                    android:layout_marginLeft="51px"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="31.08万元"
                    android:textColor="#40121212"
                    android:textSize="10px"
                    android:layout_marginLeft="3px"/>
                <ImageView
                    android:layout_width="10px"
                    android:layout_height="10px"
                    android:src="@drawable/crowdfunding_time"
                    android:layout_marginLeft="51px"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3px"
                    android:text="26天"
                    android:textColor="#40121212"
                    android:textSize="10px"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>