<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f8f8"
    tools:context="com.example.jiaofeng.zitaohui.ui.activity.Approve5Activity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ll_status"
    android:orientation="vertical"></LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44px"
        android:background="#242424">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/all_return"
            android:padding="12px"
            android:id="@+id/img_return"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="企业信息"
            android:textColor="#FFFFFFFF"
            android:textSize="17px"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8px"
        android:layout_marginBottom="8px"
        android:layout_marginLeft="12px"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="企业认证"
            android:textColor="#FF5F3104"
            android:textSize="14px"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(请上传真实的企业信息，认证通过后将无法修改)"
            android:textColor="#40121212"
            android:textSize="8px"
            android:layout_marginLeft="5px"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48px"
        android:background="#ffffff">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="企业名称"
            android:textColor="#FF121212"
            android:textSize="16px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12px"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="请输入企业名称"
            android:textColorHint="#40121212"
            android:textSize="14px"
            android:layout_centerInParent="true"
            android:background="@null"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48px"
        android:background="#ffffff"
        android:layout_marginTop="1px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="法人姓名"
            android:textColor="#FF121212"
            android:textSize="16px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12px"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="请输入法人姓名"
            android:textColorHint="#40121212"
            android:textSize="14px"
            android:layout_centerInParent="true"
            android:background="@null"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48px"
        android:background="#ffffff"
        android:layout_marginTop="1px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="身份证号"
            android:textColor="#FF121212"
            android:textSize="16px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12px"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:hint="请输入法人身份证号"
            android:textColorHint="#40121212"
            android:textSize="14px"
            android:layout_centerInParent="true"
            android:background="@null"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="279px"
        android:background="#ffffff"
        android:layout_marginTop="8px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="营业执照正面照"
            android:textColor="#E6121212"
            android:textSize="14px"
            android:layout_marginTop="8px"
            android:layout_marginLeft="12px"/>
        <ImageView
            android:layout_width="200px"
            android:layout_height="230px"
            android:src="@drawable/uploadpublicbg"
            android:layout_centerInParent="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上传营业执照副本（清晰）"
            android:textColor="#E6121212"
            android:textSize="9px"
            android:layout_marginTop="164px"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="169px"
        android:background="#ffffff"
        android:layout_marginTop="8px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="法人身份证正面照"
            android:textColor="#E6121212"
            android:textSize="14px"
            android:layout_marginTop="8px"
            android:layout_marginLeft="12px"/>
        <ImageView
            android:layout_width="200px"
            android:layout_height="120px"
            android:src="@drawable/uploadpersonbg"
            android:layout_centerInParent="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上传正面照（清晰）"
            android:textColor="#E6121212"
            android:textSize="9px"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="109px"/>
    </RelativeLayout>
    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="169px"
    android:background="#ffffff"
    android:layout_marginTop="8px">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="法人身份证反面照"
        android:textColor="#E6121212"
        android:textSize="14px"
        android:layout_marginTop="8px"
        android:layout_marginLeft="12px"/>
    <ImageView
        android:layout_width="200px"
        android:layout_height="120px"
        android:src="@drawable/uploadpersonbg"
        android:layout_centerInParent="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="上传反面照（清晰）"
        android:textColor="#E6121212"
        android:textSize="9px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="109px"/>
</RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_next"
        android:layout_width="match_parent"
        android:layout_height="48px"
        android:background="#242424"
        android:layout_marginTop="8px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下一步"
            android:textColor="#E6FFFFFF"
            android:textSize="16px"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
