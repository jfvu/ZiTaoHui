<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f8f8"
    tools:context="com.example.jiaofeng.zitaohui.ui.activity.NewPromotionActivity">
    <LinearLayout
        android:id="@+id/ll_status_activity_newpromotion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        ></LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_title_activity_newpromotion"
        android:layout_width="match_parent"
        android:layout_height="44px"
        android:background="#242424"
        >
        <ImageView
            android:id="@+id/img_return_activity_oneofclass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/all_return"
            android:layout_centerVertical="true"
            android:padding="12px"
            />
        <TextView
            android:id="@+id/tv_classname_activity_oneofclass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新建优惠券"
            android:textColor="#ffffff"
            android:textSize="17px"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="48px"
        android:background="#ffffff"
        android:layout_marginTop="8px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="卡号"
            android:textColor="#FF121212"
            android:textSize="16px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12px"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="点此随机生成"
            android:textColorHint="#40121212"
            android:textSize="14px"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48px"

        android:background="#ffffff"
        android:layout_marginTop="1px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="有效期"
            android:textColor="#E6121212"
            android:textSize="16px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12px"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="请输入有效期"
            android:textColorHint="#40121212"
            android:textSize="14px"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <RelativeLayout

    android:layout_width="match_parent"
    android:layout_height="48px"

    android:background="#ffffff"
    android:layout_marginTop="1px">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="金额"
        android:textColor="#FF121212"
        android:textSize="16px"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12px"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="请输入金额"
            android:textColorHint="#40121212"
            android:textSize="14px"
            android:layout_centerInParent="true"/>
</RelativeLayout>
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="48px"

        android:background="#ffffff"
        android:layout_marginTop="1px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="数量"
            android:textColor="#FF121212"
            android:textSize="16px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12px"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="请输入数量"
            android:textColorHint="#40121212"
            android:textSize="14px"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <Button
        android:id="@+id/btn_sure_activity_newpromotion"
        android:layout_width="match_parent"
        android:layout_height="36px"
        android:background="@drawable/shape_btnbg"
        android:layout_marginTop="48px"
        android:layout_marginLeft="12px"
        android:layout_marginRight="12px"
        android:text="确认生成"
        android:textColor="#FFFFFFFF"
        android:textSize="14px"/>
</LinearLayout>
