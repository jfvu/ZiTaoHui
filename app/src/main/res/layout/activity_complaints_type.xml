<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jiaofeng.zitaohui.ui.activity.ComplaintsTypeActivity"
    android:background="#f8f8f8">
<LinearLayout
    android:id="@+id/ll_status_activity_complaintstype"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"></LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_title_activity_complaintstype"
        android:layout_width="match_parent"
        android:layout_height="44px"
        android:layout_below="@id/ll_status_activity_complaintstype"
        android:background="#242424">
        <ImageView
            android:id="@+id/img_return_activity_complainstype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/all_return"
            android:padding="12px"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="投诉类型"
            android:textColor="#FFFFFFFF"
            android:textSize="17px"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="89px"
        android:layout_below="@id/rl_title_activity_complaintstype"
        android:layout_marginTop="8px"
        android:background="#ffffff">
        <ImageView
            android:layout_width="73px"
            android:layout_height="73px"
            android:src="@drawable/item_menu_img"
            android:layout_marginLeft="12px"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="内容内容内容内容内容内容\n内容内容内容内容内容内容\n内容内容内容内容内容内容\n内容内容内容内容内容内容"
            android:textColor="#E6121212"
            android:textSize="14px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="90px"/>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="投诉描述"
        android:textColor="#FF242424"
        android:textSize="12px"
        android:layout_marginLeft="12px"
        android:layout_marginTop="105px"
        android:layout_below="@id/rl_title_activity_complaintstype"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180px"
        android:background="#ffffff"
        android:layout_below="@id/rl_title_activity_complaintstype"
        android:layout_marginTop="130px"
        android:focusableInTouchMode="true"
        android:focusable="true">
        <EditText
            android:id="@+id/et_input_activity_complaintstype"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="请输入投诉内容（不少于10个字）"
            android:textColorHint="#40121212"
            android:textSize="12px"
            android:gravity="start"
            android:layout_marginTop="8px"
            android:layout_marginLeft="12px"
            android:layout_marginRight="12px"
            android:layout_marginBottom="8px"/>
        <TextView
            android:id="@+id/tv_showingput_activity_complaintstype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0/200"
            android:textColor="#66121212"
            android:textSize="12px"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="8px"
            android:layout_marginRight="12px"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="108px"
        android:background="#ffffff"
        android:layout_below="@id/rl_title_activity_complaintstype"
        android:layout_marginTop="318px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="证据截图"
            android:textColor="#E6121212"
            android:textSize="14px"
            android:layout_marginTop="8px"
            android:layout_marginLeft="12px"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="（选填，最多3张）"
            android:textColor="#40121212"
            android:textSize="10px"
            android:layout_marginTop="12px"
            android:layout_marginLeft="71px"/>
        <ImageView
            android:id="@+id/img_add_activity_complaintstype"
            android:layout_width="64px"
            android:layout_height="64px"
            android:src="@drawable/evaluate_add"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="21px"
            android:layout_marginBottom="8px"/>
    </RelativeLayout>
    <Button
        android:id="@+id/btn_sure_activity_complaintstype"
        android:layout_width="match_parent"
        android:layout_height="42px"
        android:layout_below="@id/rl_title_activity_complaintstype"
        android:layout_marginTop="462px"
        android:background="#242424"
        android:text="确认"
        android:textColor="#FFFFFFFF"
        android:textSize="14px"
        android:layout_marginLeft="12px"
        android:layout_marginRight="12px"/>
</RelativeLayout>
