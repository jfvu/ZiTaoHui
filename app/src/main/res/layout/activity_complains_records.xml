<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jiaofeng.zitaohui.ui.activity.ComplainsRecordsActivity"
    android:background="#f8f8f8">
<LinearLayout
    android:id="@+id/ll_status_activity_complaintsrecords"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"></LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_title_activity_complaintsrecords"
        android:layout_width="match_parent"
        android:layout_height="44px"
        android:background="#242424"
        android:layout_below="@id/ll_status_activity_complaintsrecords">
    <ImageView
        android:id="@+id/img_return_activity_complaintsrecords"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/all_return"
    android:padding="12px"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="投诉类型"
            android:textColor="#FFFFFFFF"
            android:textSize="17px"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:background="#ffffff"
        android:layout_below="@id/rl_title_activity_complaintsrecords">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="投诉原因"
            android:textColor="#FF5F3104"
            android:textSize="12px"
            android:layout_marginTop="8px"
            android:layout_marginLeft="12px"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分类错误"
            android:textColor="#E6121212"
            android:textSize="14px"
            android:layout_marginTop="7px"
            android:layout_marginLeft="71px"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="09:41"
            android:textColor="#66121212"
            android:textSize="12px"
            android:layout_alignParentRight="true"
            android:layout_marginTop="12px"
            android:layout_marginRight="12px"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分类错误内容"
            android:textColor="#40121212"
            android:textSize="12px"
            android:layout_marginTop="32px"
            android:layout_marginLeft="12px"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="89px"
        android:layout_below="@id/rl_title_activity_complaintsrecords"
        android:layout_marginTop="81px"
        android:background="#ffffff">
        <ImageView
            android:layout_width="73px"
            android:layout_height="73px"
            android:src="@drawable/item_menu_img"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12px"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="内容内容内容内容内容内容\n内容内容内容内容内容内容\n内容内容内容内容内容内容"
            android:textColor="#E6121212"
            android:textSize="14px"
            android:layout_marginLeft="90px"
            android:layout_marginTop="9px"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="完成"
            android:textColor="#FF5F3104"
            android:textSize="12px"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="12px"
            android:layout_marginBottom="8px"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40px"
        android:background="#ffffff"
        android:layout_below="@id/rl_title_activity_complaintsrecords"
        android:layout_marginTop="178px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="处理进程"
            android:textColor="#FF5F3104"
            android:textSize="12px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12px"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="完成"
            android:textColor="#E6121212"
            android:textSize="14px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12px"/>
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_activity_complaintsrecords"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_title_activity_complaintsrecords"
        android:layout_marginTop="219px"></android.support.v7.widget.RecyclerView>
</RelativeLayout>
