<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jiaofeng.zitaohui.ui.activity.SeachActivity">
<LinearLayout
    android:id="@+id/ll_status_activity_seach"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content"></LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_seach_activity_seach"
        android:layout_width="match_parent"
        android:layout_height="48px"
        android:background="#ffffff"
        android:layout_below="@id/ll_status_activity_seach">
        <TextView
            android:id="@+id/tv_cancel_activity_seach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:textColor="#FF6B6B6B"
            android:textSize="13px"
            android:layout_alignParentRight="true"
            android:layout_marginTop="9px"
            android:padding="12px"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_seachbg"
            android:layout_marginTop="12px"
            android:layout_marginLeft="12px"
            android:layout_toLeftOf="@id/tv_cancel_activity_seach"
            android:layout_marginRight="12px">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="12px"
                android:background="@null"
                android:hint="请输入要查找信息"
                android:textColorHint="#FF6B6B6B"
                android:textSize="14px"/>
        </RelativeLayout>
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_heat_activit_seach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="热门搜索"
        android:textColor="#FF323232"
        android:textSize="14px"
        android:layout_below="@id/rl_seach_activity_seach"
        android:layout_marginLeft="12px"
        android:layout_marginTop="12px"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_heat_activity_seach"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_heat_activit_seach"
        android:layout_marginTop="8px"
        android:layout_marginLeft="17px"></android.support.v7.widget.RecyclerView>
    <TextView
        android:id="@+id/tv_history_activity_seach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="历史搜索"
        android:textColor="#FF323232"
        android:textSize="14px"
        android:layout_below="@id/rv_heat_activity_seach"
        android:layout_marginTop="24px"
        android:layout_marginLeft="12px"/>
    <ImageView
        android:id="@+id/img_delete_activity_seach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/delete"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/tv_history_activity_seach"
        android:padding="12px"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_history_activity_seach"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tv_history_activity_seach"
        android:layout_marginTop="8px"
        android:layout_marginLeft="17px"></android.support.v7.widget.RecyclerView>
</RelativeLayout>
