<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jiaofeng.zitaohui.ui.activity.ExpandActivity"
    android:background="#f8f8f8">
<LinearLayout
    android:id="@+id/ll_status_activity_addressexpand"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"></LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44px"
        android:background="#242424">
        <ImageView
            android:id="@+id/img_return_activity_expand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/all_return"
            android:padding="12px"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="扩展服务"
            android:textColor="#FFFFFFFF"
            android:textSize="17px"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="扩展服务"
        android:textColor="#FF5F3104"
        android:textSize="12px"
        android:layout_marginTop="12px"
        android:layout_marginLeft="12px"
        android:layout_marginBottom="12px"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52px"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <LinearLayout
            android:id="@+id/ll_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">
<ImageView
    android:layout_width="36px"
    android:layout_height="36px"
    android:layout_marginLeft="12px"
    android:src="@drawable/expand_1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5px"
                android:text="店铺报表"
                android:textColor="#FFF6A623"
                android:textSize="14px"
                android:gravity="center"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">
            <ImageView
                android:layout_width="36px"
                android:layout_height="36px"
                android:layout_marginLeft="12px"
                android:src="@drawable/expand_2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5px"
                android:text="鉴赏阁    "
                android:textColor="#FF9B9B9B"
                android:textSize="14px"
                android:gravity="center"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52px"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="1px">
        <LinearLayout
            android:id="@+id/ll_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">
            <ImageView
                android:layout_width="36px"
                android:layout_height="36px"
                android:layout_marginLeft="12px"
                android:src="@drawable/expand_3"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5px"
                android:text="子账号    "
                android:textColor="#FF4990E2"
                android:textSize="14px"
                android:gravity="center"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">
            <ImageView
                android:layout_width="36px"
                android:layout_height="36px"
                android:layout_marginLeft="12px"
                android:src="@drawable/expand_4"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5px"
                android:text="投诉处理"
                android:textColor="#FFD0011B"
                android:textSize="14px"
                android:gravity="center"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52px"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <LinearLayout
            android:id="@+id/ll_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">
            <ImageView
                android:layout_width="36px"
                android:layout_height="36px"
                android:layout_marginLeft="12px"
                android:src="@drawable/expand_5"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5px"
                android:text="快捷发货"
                android:textColor="#FFB8E986"
                android:textSize="14px"
                android:gravity="center"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
