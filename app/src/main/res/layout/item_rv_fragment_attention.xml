<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
<RelativeLayout
    android:id="@+id/rl_all_item_attention"
    android:layout_width="109px"
    android:layout_height="123px"
    android:layout_centerHorizontal="true"
    android:background="@drawable/item_bg"
    android:layout_marginTop="8px">
    <ImageView
        android:id="@+id/img_item_attention"
        android:layout_width="56px"
        android:layout_height="56px"
        android:src="@drawable/attention_head"
        android:layout_marginTop="12px"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/tv_name_item_attention"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14px"
        android:textColor="#e6121212"
        android:text="名称名称名称"
        android:layout_below="@id/img_item_attention"
        android:layout_marginTop="8px"
        android:layout_centerHorizontal="true"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_below="@id/tv_name_item_attention"
        android:layout_marginTop="8px">
        <ImageView
            android:layout_width="14px"
            android:layout_height="14px"
            android:src="@drawable/attention_vip"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VIP2"
            android:textColor="#ff0000"
            android:textSize="10px"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="3px"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="评分：4.6分"
            android:textSize="8px"
            android:textColor="#40121212"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="14px"/>
    </LinearLayout>
</RelativeLayout>
</RelativeLayout>