<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jiaofeng.zitaohui.ui.activity.ShareActivity"
    >
<LinearLayout
    android:id="@+id/ll_status_share"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"></LinearLayout>
    <Button
        android:id="@+id/btn_cancal_share"
        android:layout_width="match_parent"
        android:layout_height="48px"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:text="取消"
        android:textColor="#ff0000"
        android:textSize="16px"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="8px"
        android:background="#D8D8D8"
        android:layout_above="@id/btn_cancal_share"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="113px"
        android:layout_above="@id/btn_cancal_share"
        android:layout_marginBottom="8px"
        android:background="#ffffff">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true">
        <LinearLayout
            android:id="@+id/ll_qr_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24px">
            <ImageView
                android:layout_width="48px"
                android:layout_height="48px"
                android:src="@drawable/share_qr"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="二维码"
                android:textColor="#e6121212"
                android:textSize="12px"
                android:layout_marginTop="3px"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_link_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24px"
            android:layout_marginLeft="82px">
            <ImageView
                android:layout_width="48px"
                android:layout_height="48px"
                android:src="@drawable/share_link"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发送链接"
                android:textColor="#e6121212"
                android:textSize="12px"
                android:layout_marginTop="3px"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
