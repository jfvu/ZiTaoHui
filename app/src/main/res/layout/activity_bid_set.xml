<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f8f8"
    tools:context="com.example.jiaofeng.zitaohui.ui.activity.BidSetActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ll_status"
    android:orientation="vertical"></LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44px"
        android:background="#242424">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/all_return"
            android:padding="12px"
            android:id="@+id/img_return"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="出价防扰设置"
            android:textColor="#FFFFFFFF"
            android:textSize="17px"
            android:layout_centerInParent="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保存"
            android:textColor="#FFFFFFFF"
            android:textSize="12px"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:padding="12px"
            android:id="@+id/tv_save"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48px"
        android:background="#ffffff"
        android:layout_marginTop="8px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="首次出价需要认证手机号"
            android:textColor="#E6121212"
            android:textSize="16px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12px"/>
        <com.zcw.togglebutton.ToggleButton
            android:id="@+id/tb_1"
            android:layout_width="40px"
            android:layout_height="20px"
            app:tbOnColor="#FF5F3104"
            app:tbOffColor="#40121212"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16px"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48px"
        android:background="#ffffff"
        android:layout_marginTop="8px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="违约率小于30%"
            android:textColor="#E6121212"
            android:textSize="16px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12px"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(2笔以上）"
            android:textColor="#E6121212"
            android:textSize="8px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="135px"/>
        <com.zcw.togglebutton.ToggleButton
            android:id="@+id/tb_2"
            android:layout_width="40px"
            android:layout_height="20px"
            app:tbOnColor="#FF5F3104"
            app:tbOffColor="#40121212"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16px"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48px"
        android:background="#ffffff"
        android:layout_marginTop="1px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="买家支付系统保证金"
            android:textColor="#E6121212"
            android:textSize="16px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12px"/>
        <com.zcw.togglebutton.ToggleButton
            android:id="@+id/tb_3"
            android:layout_width="40px"
            android:layout_height="20px"
            app:tbOnColor="#FF5F3104"
            app:tbOffColor="#40121212"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16px"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48px"
        android:background="#ffffff"
        android:layout_marginTop="1px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="买家禁止出价"
            android:textColor="#E6121212"
            android:textSize="16px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12px"/>
        <com.zcw.togglebutton.ToggleButton
            android:id="@+id/tb_4"
            android:layout_width="40px"
            android:layout_height="20px"
            app:tbOnColor="#FF5F3104"
            app:tbOffColor="#40121212"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16px"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48px"
        android:background="#ffffff"
        android:layout_marginTop="8px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退货比率小于30%"
            android:textColor="#E6121212"
            android:textSize="16px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12px"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(2笔以上）"
            android:textColor="#E6121212"
            android:textSize="8px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="152px"/>
        <com.zcw.togglebutton.ToggleButton
            android:id="@+id/tb_5"
            android:layout_width="40px"
            android:layout_height="20px"
            app:tbOnColor="#FF5F3104"
            app:tbOffColor="#40121212"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16px"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48px"
        android:background="#ffffff"
        android:layout_marginTop="1px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="买家支付系统保证金"
            android:textColor="#E6121212"
            android:textSize="16px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12px"/>
        <com.zcw.togglebutton.ToggleButton
            android:id="@+id/tb_6"
            android:layout_width="40px"
            android:layout_height="20px"
            app:tbOnColor="#FF5F3104"
            app:tbOffColor="#40121212"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16px"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48px"
        android:background="#ffffff"
        android:layout_marginTop="1px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="买家禁止出价"
            android:textColor="#E6121212"
            android:textSize="16px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12px"/>
        <com.zcw.togglebutton.ToggleButton
            android:id="@+id/tb_7"
            android:layout_width="40px"
            android:layout_height="20px"
            app:tbOnColor="#FF5F3104"
            app:tbOffColor="#40121212"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16px"/>
    </RelativeLayout>
</LinearLayout>
