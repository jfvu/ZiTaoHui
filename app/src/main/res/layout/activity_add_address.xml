<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jiaofeng.zitaohui.ui.activity.AddAddressActivity"
    android:background="#f8f8f8">
<LinearLayout
    android:id="@+id/ll_status_activity_addaddress"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content"></LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_title_activity_addaddress"
        android:layout_width="match_parent"
        android:layout_height="44px"
        android:background="#242424"
        android:layout_below="@id/ll_status_activity_addaddress">
        <ImageView
            android:id="@+id/img_return_activity_addaddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/all_return"
            android:padding="12px"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="填写地址"
            android:textColor="#FFFFFFFF"
            android:textSize="17px"
            android:layout_centerInParent="true"/>
        <TextView
            android:id="@+id/tv_send_activity_addaddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发货"
            android:textColor="#FFFFFFFF"
            android:textSize="12px"
            android:layout_alignParentRight="true"
            android:padding="12px"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_name_activity_addaddress"
        android:layout_width="match_parent"
        android:layout_height="48px"
        android:background="#ffffff"
        android:layout_below="@id/rl_title_activity_addaddress"
        android:layout_marginTop="8px"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系人"
            android:textColor="#FF121212"
            android:textSize="16px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12px"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="73px"
            android:background="@null"
            android:hint="请输入名字"
            android:textColorHint="#40121212"
            android:textSize="14px"
            android:gravity="center_vertical"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_phone_activity_addaddress"
        android:layout_width="match_parent"
        android:layout_height="48px"
        android:background="#ffffff"
        android:layout_below="@id/rl_name_activity_addaddress"
        android:layout_marginTop="1px"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号码"
            android:textColor="#FF121212"
            android:textSize="16px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12px"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="86px"
            android:background="@null"
            android:hint="请输入11位手机号码"
            android:textColorHint="#40121212"
            android:textSize="14px"
            android:gravity="center_vertical"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_area_activity_addaddress"
        android:layout_width="match_parent"
        android:layout_height="48px"
        android:background="#ffffff"
        android:layout_below="@id/rl_phone_activity_addaddress"
        android:layout_marginTop="1px"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择地区"
            android:textColor="#FF121212"
            android:textSize="16px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12px"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="86px"
            android:background="@null"
            android:hint="请输入地区信息"
            android:textColorHint="#40121212"
            android:textSize="14px"
            android:gravity="center_vertical"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_address_activity_addaddress"
        android:layout_width="match_parent"
        android:layout_height="48px"
        android:background="#ffffff"
        android:layout_below="@id/rl_area_activity_addaddress"
        android:layout_marginTop="1px"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="详细地址"
            android:textColor="#FF121212"
            android:textSize="16px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12px"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="86px"
            android:background="@null"
            android:hint="请输入街道门牌信息"
            android:textColorHint="#40121212"
            android:textSize="14px"
            android:gravity="center_vertical"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_code_activity_addaddress"
        android:layout_width="match_parent"
        android:layout_height="48px"
        android:background="#ffffff"
        android:layout_below="@id/rl_address_activity_addaddress"
        android:layout_marginTop="1px"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="邮政编码"
            android:textColor="#FF121212"
            android:textSize="16px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12px"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="86px"
            android:background="@null"
            android:hint="请输入邮政编码"
            android:textColorHint="#40121212"
            android:textSize="14px"
            android:gravity="center_vertical"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_number_activity_addaddress"
        android:layout_width="match_parent"
        android:layout_height="48px"
        android:background="#ffffff"
        android:layout_below="@id/rl_code_activity_addaddress"
        android:layout_marginTop="1px"
        android:focusable="true"
        android:focusableInTouchMode="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="快递单号"
            android:textColor="#FF121212"
            android:textSize="16px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12px"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="86px"
            android:background="@null"
            android:hint="请输入快递单号"
            android:textColorHint="#40121212"
            android:textSize="14px"
            android:gravity="center_vertical"/>
    </RelativeLayout>
</RelativeLayout>
