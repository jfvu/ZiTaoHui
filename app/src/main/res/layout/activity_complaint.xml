<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_5"
    tools:context="com.example.jiaofeng.zitaohui.ui.activity.ComplaintActivity"
    android:background="#f9f9f9">
<LinearLayout
    android:id="@+id/ll_status_activity_complaint"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content"></LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_title_activity_complaint"
        android:layout_width="match_parent"
        android:layout_height="44px"
        android:layout_below="@id/ll_status_activity_complaint"
        android:background="#242424">
        <ImageView
            android:id="@+id/img_return_activity_complaint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/all_return"
            android:padding="12px"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="投诉"
            android:textSize="17px"
            android:textColor="#ffffff"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_show_activity_complaint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请选择投诉原因"
        android:textSize="12px"
        android:textColor="#242424"
        android:layout_below="@id/rl_title_activity_complaint"
        android:layout_marginLeft="12px"
        android:layout_marginTop="8px"/>
    <RelativeLayout
        android:id="@+id/rl_class_activity_complaint"
        android:layout_width="match_parent"
        android:layout_height="48px"
        android:background="#ffffff"
        android:layout_below="@id/tv_show_activity_complaint"
        android:layout_marginTop="8px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分类错误"
            android:textSize="16px"
            android:layout_centerVertical="true"
            android:textColor="#121212"
            android:layout_marginLeft="12px"/>
        <ImageView
            android:layout_width="9px"
            android:layout_height="16px"
            android:src="@drawable/find_next"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12px"/>
    </RelativeLayout>
    <RelativeLayout
    android:id="@+id/rl_taboo_activity_complaint"
    android:layout_width="match_parent"
    android:layout_height="48px"
    android:background="#ffffff"
    android:layout_below="@id/rl_class_activity_complaint"
    android:layout_marginTop="1px">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="违禁品"
        android:textSize="16px"
        android:layout_centerVertical="true"
        android:textColor="#121212"
        android:layout_marginLeft="12px"/>
    <ImageView
        android:layout_width="9px"
        android:layout_height="16px"
        android:src="@drawable/find_next"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="12px"/>
</RelativeLayout>
    <RelativeLayout
    android:id="@+id/rl_error_activity_complaint"
    android:layout_width="match_parent"
    android:layout_height="48px"
    android:background="#ffffff"
    android:layout_below="@id/rl_taboo_activity_complaint"
    android:layout_marginTop="1px">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="商品信息有误"
        android:textSize="16px"
        android:layout_centerVertical="true"
        android:textColor="#121212"
        android:layout_marginLeft="12px"/>
    <ImageView
        android:layout_width="9px"
        android:layout_height="16px"
        android:src="@drawable/find_next"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="12px"/>
</RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_false_activity_complaint"
        android:layout_width="match_parent"
        android:layout_height="48px"
        android:background="#ffffff"
        android:layout_below="@id/rl_error_activity_complaint"
        android:layout_marginTop="1px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="假货"
            android:textSize="16px"
            android:layout_centerVertical="true"
            android:textColor="#121212"
            android:layout_marginLeft="12px"/>
        <ImageView
            android:layout_width="9px"
            android:layout_height="16px"
            android:src="@drawable/find_next"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12px"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_complaint_activity_complaint"
        android:layout_width="match_parent"
        android:layout_height="48px"
        android:background="#ffffff"
        android:layout_below="@id/rl_false_activity_complaint"
        android:layout_marginTop="1px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="投诉商家"
            android:textSize="16px"
            android:layout_centerVertical="true"
            android:textColor="#121212"
            android:layout_marginLeft="12px"/>
        <ImageView
            android:layout_width="9px"
            android:layout_height="16px"
            android:src="@drawable/find_next"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12px"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_record_activity_complaint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="投诉记录"
        android:textSize="12px"
        android:textColor="#242424"
        android:layout_below="@id/rl_complaint_activity_complaint"
        android:padding="12px"
        android:layout_alignParentRight="true"/>
</RelativeLayout>
