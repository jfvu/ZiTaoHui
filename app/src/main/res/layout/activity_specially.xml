<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jiaofeng.zitaohui.ui.activity.SpeciallyActivity"
    android:background="#FFF9F9F9">
<LinearLayout
    android:id="@+id/ll_status_activity_specially"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"></LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44px"
        android:background="#FF5F3104">
        <RelativeLayout
            android:id="@+id/rl_return_activity_specially"
            android:layout_width="35px"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="9px"
                android:layout_height="16px"
                android:src="@drawable/all_return"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="专场拍"
            android:textColor="#FFFFFFFF"
            android:textSize="17px"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/img_specially"
        android:layout_width="match_parent"
        android:layout_height="180px"
        android:background="@drawable/concern_img">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/concern_bg"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8px"
                android:text="内容内容内容内容"
                android:textColor="#ffffff"
                android:textSize="12px"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
    </RelativeLayout>
<android.support.v7.widget.RecyclerView
    android:id="@+id/rv_activity_specially"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8px"></android.support.v7.widget.RecyclerView>
</LinearLayout>
