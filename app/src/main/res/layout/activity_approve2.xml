<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jiaofeng.zitaohui.ui.activity.Approve2Activity"
    android:background="#f8f8f8">
<LinearLayout
    android:id="@+id/ll_status"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"></LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44px"
        android:background="#242424">
        <ImageView
            android:id="@+id/img_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/all_return"
            android:padding="12px"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人信息认证"
            android:textColor="#FFFFFFFF"
            android:textSize="17px"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8px"
                android:layout_marginLeft="12px"
                android:layout_marginBottom="8px">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="实名认证"
                    android:textColor="#FF5F3104"
                    android:textSize="14px"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(请上传真实的个人信息，认证通过后将无法修改)"
                    android:textColor="#40121212"
                    android:textSize="8px"
                    android:layout_marginLeft="5px"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48px"
                android:background="#ffffff">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="姓名"
                    android:textColor="#FF121212"
                    android:textSize="16px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12px"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:background="@null"
                    android:hint="请输入真实姓名"
                    android:textColorHint="#40121212"
                    android:textSize="14px"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48px"
                android:background="#ffffff"
                android:layout_marginTop="1px">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="身份证/护照"
                    android:textColor="#FF121212"
                    android:textSize="16px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12px"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:background="@null"
                    android:hint="请输入信息"
                    android:textColorHint="#40121212"
                    android:textSize="14px"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48px"
                android:background="#ffffff"
                android:layout_marginTop="1px">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系电话"
                    android:textColor="#FF121212"
                    android:textSize="16px"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12px"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:background="@null"
                    android:hint="请输入联系号码"
                    android:textColorHint="#40121212"
                    android:textSize="14px"/>
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="请填写有效电话，工作人员将会致电核实材料"
                android:textColor="#40121212"
                android:textSize="12px"
                android:layout_marginTop="8px"
                android:layout_marginBottom="8px"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="169px"
                android:background="#ffffff">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="身份证正面照"
                    android:textColor="#E6121212"
                    android:textSize="14px"
                    android:layout_marginLeft="12px"
                    android:layout_marginTop="8px"/>
                <ImageView
                    android:layout_width="200px"
                    android:layout_height="120px"
                    android:src="@drawable/uploadpersonbg"
                    android:layout_centerInParent="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上传正面照（清晰）"
                    android:textColor="#E6121212"
                    android:textSize="9px"
                    android:layout_marginTop="109px"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="169px"
                android:background="#ffffff"
                android:layout_marginTop="8px">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="身份证反面照"
                    android:textColor="#E6121212"
                    android:textSize="14px"
                    android:layout_marginLeft="12px"
                    android:layout_marginTop="8px"/>
                <ImageView
                    android:layout_width="200px"
                    android:layout_height="120px"
                    android:src="@drawable/uploadpersonbg"
                    android:layout_centerInParent="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上传反面照（清晰）"
                    android:textColor="#E6121212"
                    android:textSize="9px"
                    android:layout_marginTop="109px"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="169px"
                android:background="#ffffff"
                android:layout_marginTop="8px">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="手持身份证照"
                    android:textColor="#E6121212"
                    android:textSize="14px"
                    android:layout_marginLeft="12px"
                    android:layout_marginTop="8px"/>
                <ImageView
                    android:layout_width="200px"
                    android:layout_height="120px"
                    android:src="@drawable/uploadpersonbg"
                    android:layout_centerInParent="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上传手持身份证照（清晰）"
                    android:textColor="#E6121212"
                    android:textSize="9px"
                    android:layout_marginTop="109px"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_next"
                android:layout_width="match_parent"
                android:layout_height="48px"
                android:background="#242424"
                android:layout_marginTop="8px">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="下一步"
                    android:textColor="#E6FFFFFF"
                    android:textSize="16px"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
