<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jiaofeng.zitaohui.ui.activity.OneOfClassActivity">
    <LinearLayout
        android:id="@+id/ll_status_activity_oneofclass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        ></LinearLayout>
<RelativeLayout
    android:id="@+id/rl_title_activity_oneofclass"
    android:layout_width="match_parent"
    android:layout_height="44px"
    android:background="#242424"
    android:layout_below="@id/ll_status_activity_oneofclass">
    <ImageView
        android:id="@+id/img_return_activity_oneofclass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/all_return"
        android:layout_centerVertical="true"
        android:padding="12px"
        />
    <TextView
        android:id="@+id/tv_classname_activity_oneofclass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="某个分类"
        android:textColor="#ffffff"
        android:textSize="17px"
        android:layout_centerInParent="true"/>
</RelativeLayout>
    <RadioGroup
        android:id="@+id/rg_activity_oneofclass"
        android:layout_width="match_parent"
        android:layout_height="40px"
        android:layout_below="@id/rl_title_activity_oneofclass"
        android:background="#ffffff"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/rb_new"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:text="最新上拍"
            android:textSize="14sp"
            android:gravity="center"
            android:drawableBottom="@drawable/select_radiobuttonbg"
            android:textColor="@drawable/selct_rb_font"
            />
        <RadioButton
            android:id="@+id/rb_soon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:text="即将截拍"
            android:textSize="14sp"
            android:gravity="center"
            android:drawableBottom="@drawable/select_radiobuttonbg"
            android:textColor="@drawable/selct_rb_font"/>
        <RadioButton
            android:id="@+id/rb_synthesize"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:text="综合"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="@drawable/selct_rb_font"
            android:drawableBottom="@drawable/select_little_radiobuttonbg"/>
        <RadioButton
            android:id="@+id/rb_least"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:text="一口价"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="@drawable/selct_rb_font"
            android:drawableBottom="@drawable/select_radiobuttonbg"
            android:drawableRight="@drawable/select_up_down"
            android:paddingRight="30dp"
            />
    </RadioGroup>
    <FrameLayout
        android:id="@+id/fl_activity_oneofclass"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rg_activity_oneofclass">

    </FrameLayout>
</RelativeLayout>
