<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jiaofeng.zitaohui.ui.activity.DetailActivity"
    android:background="#f8f8f8">
<LinearLayout
    android:id="@+id/ll_status_activity_detail"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"></LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44px"
        android:background="#242424">
        <RelativeLayout
            android:id="@+id/rl_return_activity_detail"
            android:layout_width="35px"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="9px"
                android:layout_height="16px"
                android:src="@drawable/all_return"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="明细"
            android:textColor="#FFFFFFFF"
            android:textSize="17px"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <android.support.design.widget.TabLayout
        android:id="@+id/tl_activity_detail"
        android:layout_width="match_parent"
        android:layout_height="40px"
        android:background="#ffffff"
        app:tabIndicatorHeight="4px"
        app:tabIndicatorColor="#FF242424"
        app:tabTextColor="#40121212"
        app:tabSelectedTextColor="#242424"
        app:tabMode="fixed"></android.support.design.widget.TabLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_activity_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>
</LinearLayout>
