<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
<RelativeLayout
    android:id="@+id/rl_title_fragment_my"
    android:layout_width="match_parent"
    android:layout_height="44px"
    android:background="#242424">
    <LinearLayout
        android:id="@+id/ll_name_fragment_my"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerInParent="true">
        <TextView
            android:id="@+id/tv_title_fragment_my"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="买家中心"
            android:textColor="#ffffff"
            android:textSize="17px"
            android:gravity="center"
            android:layout_gravity="center_vertical"/>
        <ImageView
            android:id="@+id/img_select_fragment_my"
            android:layout_width="wrap_content"
            android:layout_height="13px"
            android:src="@drawable/my_select"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="3px"/>
    </LinearLayout>

</RelativeLayout>
    <FrameLayout
        android:id="@+id/fragment_fragment_my"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_title_fragment_my"/>
</RelativeLayout>