<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jiaofeng.zitaohui.ui.activity.PickerActivity"
    android:background="#f8f8f8">
<LinearLayout
    android:id="@+id/ll_status_activity_picker"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"></LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_title_activity_picker"
        android:layout_width="match_parent"
        android:layout_height="44px"
        android:background="#242424"
        android:layout_below="@id/ll_status_activity_picker">
        <ImageView
            android:id="@+id/img_return_activity_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/all_return"
            android:padding="12px"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="捡漏"
            android:textColor="#FFFFFFFF"
            android:textSize="17px"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="60px"
        android:background="#ffffff"
        android:layout_below="@id/rl_title_activity_picker"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="65px"
        android:src="@drawable/pickerimg"
        android:layout_below="@id/rl_title_activity_picker"
        android:layout_centerHorizontal="true"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60px"
        android:orientation="horizontal"
        android:layout_below="@id/rl_title_activity_picker">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/tv_1_picker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="17:00"
                android:textColor="#40121212"
                android:textSize="20px"
                android:layout_marginTop="8px"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已结束"
                android:textColor="#40121212"
                android:textSize="14px"
                android:layout_marginTop="4px"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/tv_2_picker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18:00"
                android:textColor="#40121212"
                android:textSize="20px"
                android:layout_marginTop="8px"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已结束"
                android:textColor="#40121212"
                android:textSize="14px"
                android:layout_marginTop="4px"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/tv_3_picker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="19:00"
                android:textColor="#ffffff"
                android:textSize="20px"
                android:layout_marginTop="8px"/>
            <TextView
                android:id="@+id/tv_6_picker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已结束"
                android:textColor="#ffffff"
                android:textSize="14px"
                android:layout_marginTop="4px"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/tv_4_picker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20:00"
                android:textColor="#40121212"
                android:textSize="20px"
                android:layout_marginTop="8px"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="即将开始"
                android:textColor="#40121212"
                android:textSize="14px"
                android:layout_marginTop="4px"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/tv_5_picker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="21:00"
                android:textColor="#40121212"
                android:textSize="20px"
                android:layout_marginTop="8px"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="即将开始"
                android:textColor="#40121212"
                android:textSize="14px"
                android:layout_marginTop="4px"/>
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_activity_picker"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_title_activity_picker"
        android:layout_marginTop="70px"></FrameLayout>
</RelativeLayout>
