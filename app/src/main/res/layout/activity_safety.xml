<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jiaofeng.zitaohui.ui.activity.SafetyActivity"
    android:background="#f8f8f8">
<LinearLayout
    android:id="@+id/ll_status_activity_safety"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"></LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44px"
        android:background="#242424">
        <RelativeLayout
            android:id="@+id/rl_return_activity_safety"
            android:layout_width="35px"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="9px"
                android:layout_height="16px"
                android:src="@drawable/all_return"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付安全"
            android:textColor="#FFFFFFFF"
            android:textSize="17px"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_resetpassword"
        android:layout_width="match_parent"
        android:layout_height="48px"
        android:layout_marginTop="8px"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="重置支付密码"
            android:textColor="#FF121212"
            android:textSize="16px"
            android:layout_marginLeft="12px"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="9px"
            android:layout_height="16px"
            android:layout_marginRight="12px"
            android:src="@drawable/find_next"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_forgetpassword"
        android:layout_width="match_parent"
        android:layout_height="48px"
        android:layout_marginTop="1px"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记支付密码"
            android:textColor="#FF121212"
            android:textSize="16px"
            android:layout_marginLeft="12px"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="9px"
            android:layout_height="16px"
            android:layout_marginRight="12px"
            android:src="@drawable/find_next"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_editdetail"
        android:layout_width="match_parent"
        android:layout_height="48px"
        android:layout_marginTop="8px"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改身份信息"
            android:textColor="#FF121212"
            android:textSize="16px"
            android:layout_marginLeft="12px"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="9px"
            android:layout_height="16px"
            android:layout_marginRight="12px"
            android:src="@drawable/find_next"/>
    </LinearLayout>
</LinearLayout>
