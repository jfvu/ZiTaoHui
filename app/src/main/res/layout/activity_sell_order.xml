<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jiaofeng.zitaohui.ui.activity.SellOrderActivity"
    android:background="#f9f9f9">
    <LinearLayout
        android:id="@+id/ll_status_activity_sellorder"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"></LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_title_activity_sellorder"
        android:layout_width="match_parent"
        android:layout_height="44px"
        android:background="#242424"
        android:layout_below="@id/ll_status_activity_sellorder">
        <ImageView
            android:id="@+id/img_return_activity_sellorder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/all_return"
            android:padding="12px"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17px"
            android:textColor="#ffffff"
            android:text="卖家订单"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <android.support.design.widget.TabLayout
        android:id="@+id/tl_activity_sellorder"
        android:layout_width="match_parent"
        android:layout_height="40px"
        android:layout_below="@id/rl_title_activity_sellorder"
        android:background="#ffffff"
        app:tabIndicatorHeight="2px"
        app:tabSelectedTextColor="#242424"
        app:tabTextColor="#40121212"
        app:tabIndicatorColor="#242424">
    </android.support.design.widget.TabLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_activity_sellorder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tl_activity_sellorder"></android.support.v4.view.ViewPager>
</RelativeLayout>
