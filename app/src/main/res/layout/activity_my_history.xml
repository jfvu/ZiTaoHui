<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.jiaofeng.zitaohui.ui.activity.MyHistoryActivity">
<LinearLayout
    android:id="@+id/ll_status_activity_myhistory"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content"></LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_title_activity_myhistory"
        android:layout_width="match_parent"
        android:layout_height="44px"
        android:background="#5f3104"
        android:layout_below="@id/ll_status_activity_myhistory">
        <ImageView
            android:id="@+id/img_return_activity_myhistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/all_return"
            android:layout_centerVertical="true"
            android:padding="12px"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的足迹"
            android:textColor="#ffffff"
            android:textSize="17px"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <android.support.design.widget.TabLayout
        android:id="@+id/tl_activity_myhistory"
        android:layout_width="match_parent"
        android:layout_height="40px"
        android:layout_below="@id/rl_title_activity_myhistory"
        android:background="#ffffff"
        app:tabIndicatorColor="#5f3104"
        app:tabIndicatorHeight="2px"
        app:tabSelectedTextColor="#5f3104"
        app:tabTextColor="#40121212"

        >
    </android.support.design.widget.TabLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_activity_myhistory"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tl_activity_myhistory"
        android:background="#f9f9f9">
    </android.support.v4.view.ViewPager>
</RelativeLayout>
