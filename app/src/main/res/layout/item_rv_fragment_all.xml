<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
<RelativeLayout
    android:id="@+id/rl_item_rv_all"
    android:layout_width="match_parent"
    android:layout_height="176px"
    android:layout_marginTop="8px"
    android:layout_marginLeft="12px"
    android:layout_marginRight="12px"
    android:background="@drawable/item_bg">
    <ImageView
        android:id="@+id/img_fragment_concern"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/concern_img"
        android:layout_margin="8px"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/img_fragment_concern"
        android:background="@drawable/concern_bg"
        android:layout_marginLeft="8px"
        android:layout_marginRight="8px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8px"
            android:text="内容内容内容内容"
            android:textColor="#ffffff"
            android:textSize="12px"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_marginTop="16px"
    android:layout_marginLeft="16px">
    <ImageView
        android:layout_width="12px"
        android:layout_height="14px"
        android:src="@drawable/all_time"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="距离结束：2小时37分18秒"
        android:textColor="#FFFFFFFF"
        android:textSize="10px"
        android:layout_marginLeft="3px"/>
</LinearLayout>

</RelativeLayout>
</RelativeLayout>