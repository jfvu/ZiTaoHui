<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jiaofeng.zitaohui.ui.activity.EditFastSendActivity"
    android:background="#f8f8f8">
<LinearLayout
    android:id="@+id/ll_status_activity_editfastsend"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"></LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44px"
        android:background="#242424">
        <ImageView
            android:id="@+id/img_return_activity_editfastsend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/all_return"
            android:padding="12px"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="快捷发货"
            android:textColor="#FFFFFFFF"
            android:textSize="17px"
            android:layout_centerInParent="true"/>
        <TextView
            android:id="@+id/tv_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:text="保存"
            android:textColor="#FFFFFFFF"
            android:textSize="12px"
            android:padding="12px"/>
    </RelativeLayout>
<RelativeLayout
    android:id="@+id/rl_choose"
    android:layout_width="match_parent"
    android:layout_height="48px"
    android:background="#ffffff"
    android:layout_marginTop="8px"
    android:gravity="center_vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="快递公司"
        android:textColor="#FF121212"
        android:textSize="16px"
        android:layout_marginLeft="12px"/>
    <ImageView
        android:layout_width="9px"
        android:layout_height="16px"
        android:src="@drawable/find_next"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12px"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="未选择"
        android:textColor="#40121212"
        android:textSize="14px"
        android:layout_alignParentRight="true"
        android:layout_marginRight="26px"/>
</RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48px"
        android:background="#ffffff"
        android:layout_marginTop="8px"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认发货提醒"
            android:textColor="#E6121212"
            android:textSize="16px"
            android:layout_marginLeft="12px"
            android:layout_centerVertical="true"/>
        <com.zcw.togglebutton.ToggleButton
            android:id="@+id/tb_1"
            android:layout_width="40px"
            android:layout_height="20px"
            app:tbOnColor="#FF5F3104"
            app:tbOffColor="#40121212"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16px"/>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开启后，每次扫描二维码都会弹出发货确认框"
        android:textColor="#FF5F3104"
        android:textSize="12px"
        android:layout_margin="12px"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48px"
        android:background="#ffffff">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="导出供货商对应订单"
            android:textColor="#E6121212"
            android:textSize="16px"
            android:layout_marginLeft="12px"
            android:layout_centerVertical="true"/>
        <com.zcw.togglebutton.ToggleButton
            android:id="@+id/tb_2"
            android:layout_width="40px"
            android:layout_height="20px"
            app:tbOnColor="#FF5F3104"
            app:tbOffColor="#40121212"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16px"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48px"
        android:background="#ffffff"
        android:layout_marginTop="1px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="导出库主对应订单"
            android:textColor="#E6121212"
            android:textSize="16px"
            android:layout_marginLeft="12px"
            android:layout_centerVertical="true"/>
        <com.zcw.togglebutton.ToggleButton
            android:id="@+id/tb_3"
            android:layout_width="40px"
            android:layout_height="20px"
            app:tbOnColor="#FF5F3104"
            app:tbOffColor="#40121212"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16px"/>
    </RelativeLayout>
</LinearLayout>
