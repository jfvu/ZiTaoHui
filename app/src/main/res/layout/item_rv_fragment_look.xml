<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
<RelativeLayout
    android:id="@+id/rl_all_item_look"
    android:layout_width="170px"
    android:layout_height="200px"
    android:layout_centerHorizontal="true"
    android:background="@drawable/item_bg"
    android:layout_marginTop="8px">
    <ImageView
        android:id="@+id/img_item_look"
        android:layout_width="match_parent"
        android:layout_height="166px"
        android:layout_marginLeft="1px"
        android:layout_marginRight="1px"
        android:background="@drawable/join_img"/>
    <TextView
        android:id="@+id/tv_name_item_look"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="8px"
        android:textColor="#121212"
        android:text="名称名称名称"
        android:layout_below="@id/img_item_look"
        android:layout_marginTop="3px"
        android:layout_marginLeft="5px"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥:4000"
            android:textColor="#5F3104"
            android:textSize="8px"
            android:layout_below="@id/tv_name_item_look"
            android:layout_marginTop="3px"
            android:layout_marginLeft="5px"
            android:layout_marginBottom="5px"
            />
        <TextView
            android:id="@+id/tv_number_item_look"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="141"
            android:textSize="8px"
            android:textColor="#ff0000"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="5px"
            android:layout_marginBottom="6px"/>
    <ImageView
        android:layout_width="6px"
        android:layout_height="8px"
        android:src="@drawable/join_heated"
        android:layout_toLeftOf="@id/tv_number_item_look"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8px"
        android:layout_marginRight="0px"/>
</RelativeLayout>
</RelativeLayout>