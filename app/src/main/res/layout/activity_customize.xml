<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jiaofeng.zitaohui.ui.activity.CustomizeActivity"
    android:background="#FFF8F8F8">
<LinearLayout
    android:id="@+id/ll_status_activity_customize"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"></LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44px"
        android:background="#FF242424">
        <RelativeLayout
            android:id="@+id/rl_return_activity_customize"
            android:layout_width="35px"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="9px"
                android:layout_height="16px"
                android:src="@drawable/all_return"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="店铺名"
            android:textColor="#E6FFFFFF"
            android:textSize="17px"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="40px"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:gravity="center">
        <RadioButton
            android:id="@+id/rb_1_activity_customize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:button="@null"
            android:text="综合推荐"
            android:textColor="@drawable/selct_rb_font"
            android:background="@drawable/select_aitabin"
            android:textSize="28px"
            android:drawableRight="@drawable/selsect_crowdupdown"
            android:drawablePadding="0px"
            android:layout_marginLeft="112px"
            android:layout_marginRight="112px"/>
        <RadioButton
            android:id="@+id/rb_2_activity_customize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:button="@null"
            android:text="全部类别"
            android:textColor="@drawable/selct_rb_font"
            android:background="@drawable/select_aitabin"
            android:textSize="28px"
            android:drawableRight="@drawable/selsect_crowdupdown"
            android:drawablePadding="0px"
            android:layout_marginLeft="112px"
            android:layout_marginRight="112px"/>
    </RadioGroup>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_activity_customize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
</LinearLayout>
