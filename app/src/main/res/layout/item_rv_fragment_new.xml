<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="114px"
              android:layout_height="wrap_content"
    android:background="@drawable/item_bg"
    android:layout_marginTop="8px"
    android:layout_marginLeft="18px">
<ImageView
    android:id="@+id/img_rv_fragment_new"
    android:layout_width="114px"
    android:layout_height="108px"
    android:background="@drawable/item_img"/>
    <TextView
        android:id="@+id/tv_name_rv_fragment_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="名称名称"
        android:textColor="#E6121212"
        android:textSize="11px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5px"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="3px"
        android:layout_marginBottom="5px"
        android:orientation="horizontal">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="首发价"
    android:textColor="#40000000"
    android:textSize="7px"
    android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/tv_price_rv_fragment_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥4000起"
            android:textColor="#FF0000"
            android:textSize="7px"/>
    </LinearLayout>
</LinearLayout>