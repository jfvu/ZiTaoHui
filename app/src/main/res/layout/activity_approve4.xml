<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jiaofeng.zitaohui.ui.activity.Approve4Activity">
<LinearLayout
    android:id="@+id/ll_status"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"></LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44px"
        android:background="#242424">
        <ImageView
            android:id="@+id/img_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/all_return"
            android:padding="12px"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="审核"
            android:textColor="#FFFFFFFF"
            android:textSize="17px"
            android:layout_centerInParent="true"/>

    </RelativeLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/submitlogo"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="96px"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已提交"
        android:textColor="#E6121212"
        android:textSize="16px"
        android:layout_marginTop="24px"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="您的申请已提交，我们将在3个工作日\n内与您联系核对信息。"
        android:textColor="#40121212"
        android:textSize="12px"
        android:layout_marginTop="8px"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        />
    <RelativeLayout
        android:id="@+id/rl_submit"
        android:layout_width="match_parent"
        android:layout_height="42px"
        android:background="@drawable/shape_btnbg"
        android:layout_marginTop="36px"
        android:layout_marginLeft="12px"
        android:layout_marginRight="12px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认"
            android:textColor="#FFFFFFFF"
            android:textSize="14px"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
</LinearLayout>
