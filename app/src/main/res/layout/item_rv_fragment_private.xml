<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rl_fragment_private"
    android:background="#ffffff"
    android:layout_marginTop="8px">
<ImageView
    android:id="@+id/img_fragment_private"
    android:layout_width="36px"
    android:layout_height="36px"
    android:src="@drawable/private_head"
    android:layout_marginTop="14px"
    android:layout_marginBottom="14px"
    android:layout_marginLeft="8px"/>
    <TextView
        android:id="@+id/tv_name_fragment_private"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="名字名字"
        android:textColor="#E6121212"
        android:textSize="14px"
        android:layout_toRightOf="@id/img_fragment_private"
        android:layout_marginLeft="5px"
        android:layout_marginTop="14px"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="服务服务服务服务服务服务服务"
        android:textColor="#40121212"
        android:textSize="10px"
        android:layout_below="@id/tv_name_fragment_private"
        android:layout_toRightOf="@id/img_fragment_private"
        android:layout_marginTop="2px"
        android:layout_marginLeft="5px"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/find_next"
        android:layout_alignParentRight="true"
        android:padding="12px"
        android:layout_centerVertical="true"/>
</RelativeLayout>